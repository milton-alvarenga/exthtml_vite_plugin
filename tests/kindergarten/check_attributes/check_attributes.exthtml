    nm = (nm == "OK") ? "idname_here" : "OK"
}
function toggle_visibility(){
    visible = !visible
}
function update_text(e){
    _text = e.target.value
}
</script>
<p (idname)={nm} title={nm} hidden={visible}>{nm}</p>
<p hidden={!visible}>hidden</p>
