<script>
	let items = ['A','B','C','D','E'];
	let items2 = ['a','b','c','d','e'];
</script>
<table>
	<tr *for={items as item}>
		<td>
		{item}
		</td>
	</tr>
</table>
<button @click={items.push("F")}>Add item</button>
<button @click={items.pop()}>Remove item</button>
<button @click={items.unshift('X')}>Unshift item</button>
<button @click={items.splice(2, 0, 'X')}>Insert X at 2</button>
<button @click={items[2] = 'Z'}>Replace item at 2 with Z</button>
<button @click={() => {const tmp = items[1]; items[1] = items[3]; items[3] = tmp;}}>Swap 1 and 3</button>
<button @click={items.reverse()}>Reverse items</button>
<button @click={items.length = 0}>Clear items</button>
<button @click={items.push("A", "B", "C")}>Re-add A,B,C</button>


<table>
	<tr *for={items2 as item}>
		<td>
		{item}
		</td>
	</tr>
</table>
<button @click={items2.push("f")}>Add item</button>
<button @click={items2.pop()}>Remove item</button>
<button @click={items2.unshift('x')}>Unshift item</button>
<button @click={items2.splice(2, 0, 'x')}>Insert X at 2</button>
<button @click={items2[2] = 'z'}>Replace item at 2 with Z</button>
<button @click={() => {const tmp = items2[1]; items2[1] = items2[3]; items2[3] = tmp;}}>Swap 1 and 3</button>
<button @click={items2.reverse()}>Reverse items</button>
<button @click={items2.length = 0}>Clear items</button>
<button @click={items2.push("a", "b", "c")}>Re-add A,B,C</button>